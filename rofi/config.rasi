configuration {
    terminal: "kitty";
    display-drun: "Applications:";
    display-windows: "Windows:";
    drun-display-format: "{icon} {name}";
    font: "Iosevka Nerd Font 12";
    modi: "window,run,drun,calc,emoji,combi";
    show-icons: true;
    icon-theme: "Papirus";
}

@theme "./catpuccin-mocha.rasi"
